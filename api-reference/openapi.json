{
  "openapi": "3.1.0",
  "info": {
    "title": "FossaPay API",
    "description": "FossaPay API for payment processing, collections, payouts, and customer management",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api-staging.fossapay.com",
      "description": "Staging server"
    },
    {
      "url": "https://prod.fossapay.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/api/v1/customers": {
      "post": {
        "operationId": "CustomersController_create",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "description": "API Key for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateXCustomerDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Customer created successfully"
          },
          "400": {
            "description": "Bad request - validation error"
          },
          "401": {
            "description": "Unauthorized - invalid API key"
          }
        },
        "summary": "Create a new customer account",
        "tags": [
          "Third Party Customers"
        ]
      },
      "get": {
        "operationId": "CustomersController_findAll",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "description": "API Key for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of customers"
          },
          "401": {
            "description": "Unauthorized - invalid API key"
          }
        },
        "summary": "Get all customers",
        "tags": [
          "Third Party Customers"
        ]
      }
    },
    "/api/v1/customers/{id}": {
      "get": {
        "operationId": "CustomersController_findOne",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "description": "API Key for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Customer ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Customer found"
          },
          "401": {
            "description": "Unauthorized - invalid API key"
          },
          "404": {
            "description": "Customer not found"
          }
        },
        "summary": "Get customer by ID",
        "tags": [
          "Third Party Customers"
        ]
      }
    },
    "/api/v1/customers/{id}/tier-status": {
      "get": {
        "operationId": "CustomersController_getTierStatus",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "description": "API Key for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Customer ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tier status retrieved"
          },
          "401": {
            "description": "Unauthorized - invalid API key"
          },
          "404": {
            "description": "Customer not found"
          }
        },
        "summary": "Get customer tier status",
        "tags": [
          "Third Party Customers"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "CreateXCustomerDto": {
        "type": "object",
        "required": [
          "name",
          "email",
          "phone"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Customer's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Customer's email address"
          },
          "phone": {
            "type": "string",
            "description": "Customer's phone number"
          },
          "metadata": {
            "type": "object",
            "description": "Additional customer metadata"
          }
        }
      },
      "Customer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique customer identifier"
          },
          "name": {
            "type": "string",
            "description": "Customer's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Customer's email address"
          },
          "phone": {
            "type": "string",
            "description": "Customer's phone number"
          },
          "tier": {
            "type": "string",
            "enum": ["basic", "premium", "enterprise"],
            "description": "Customer's tier level"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Customer creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        }
      },
      "TierStatus": {
        "type": "object",
        "properties": {
          "tier": {
            "type": "string",
            "enum": ["basic", "premium", "enterprise"],
            "description": "Current tier level"
          },
          "limits": {
            "type": "object",
            "properties": {
              "maxTransactions": {
                "type": "integer",
                "description": "Maximum number of transactions allowed"
              },
              "maxAmount": {
                "type": "number",
                "description": "Maximum transaction amount allowed"
              }
            }
          },
          "status": {
            "type": "string",
            "enum": ["active", "suspended", "pending"],
            "description": "Current tier status"
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}
